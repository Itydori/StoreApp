@page "/contactus"
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contact Us</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJX1+K6E1cv5vczR6p8R5vddedr9gh6bniKJz17B3n7zjSxVssZba7T3/ZB34" crossorigin="anonymous">
  <style>
    body, html {
      margin: 0;
      padding: 0;
      height: 100%;
      
    }
    .contact-page {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      position: relative;
    }
    .video-background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: -1;
      
    }
    
    .contact-form-container {
      width: 80%;
      max-width: 900px;
      padding: 30px;
  background: linear-gradient(90deg, rgba(95,164,210,0.7) 0%, rgba(44,62,80,0.7) 100%); /* Soft gradyan */
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
      z-index: 1;
      backdrop-filter: blur(10px); /* Blur effect */
    }
    .contact-form input, .contact-form textarea {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid #ddd;
      
      color: white;
    }
    .contact-form button {
      background-color: #007bff;
      border: none;
      color: white;
      
    }
    .form-heading {
      color: white;
      text-align: center;
      
    }

/* Typewriter efektli yazı */
.typewriter {
    width: 21.5ch;
    white-space: nowrap;
    overflow: hidden;
    border-right: 4px solid #212121;
    animation: cursor 0.5s step-start infinite, 
               text 3.8s steps(40) alternate infinite;
    font-size: clamp(2rem, 2.8vw, 5rem);
    margin-bottom: 20px;
    z-index: 1; /* Yazının üstte görünmesini sağla */
}

/* Cursor animasyonu */
@@keyframes cursor {
    0%, 100% { border-color: #212121; }
}

@@keyframes text {
    0% { width: 0; }
    100% { width: 24.5ch; }
}
  </style>
</head>
<body>

<div class="container contact-page">
  <!-- Arka planda sürekli video -->
  <video class="video-background" autoplay muted loop>
  <source src="~/videos/sample.mp4" type="video/mp4">
  Your browser does not support the video tag.
</video>

  <!-- Form alanı -->
  <div class="contact-form-container">
    <h2 class="typewriter">Have Questions? Contact Us
</h2>
    <form class="contact-form">
      <div class="mb-3">
        <label for="name" class="form-label text-white">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Your Name" required>
      </div>
      <div class="mb-3">
        <label for="surname" class="form-label text-white">Surname</label>
        <input type="text" class="form-control" id="surname" placeholder="Your Surname" required>
      </div>
      <div class="mb-3">
        <label for="phone" class="form-label text-white">Phone</label>
        <input type="tel" class="form-control" id="phone" placeholder="Your Phone Number" required>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label text-white">Email</label>
        <input type="email" class="form-control" id="email" placeholder="Your Email" required>
      </div>
      <div class="mb-3">
        <label for="message" class="form-label text-white">Your Message</label>
        <textarea class="form-control" id="message" rows="4" placeholder="Your Message" required></textarea>
      </div>
      <button type="submit" class="btn btn-primary w-100">Send Message</button>
    </form>
  </div>
</div>

<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway:400,400i,700">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0p3dXfR2fWvkdZGflrOReC/qh0rPaAA7c3aThkzJZMGmDJzTt" crossorigin="anonymous"></script>
</body>
</html>
