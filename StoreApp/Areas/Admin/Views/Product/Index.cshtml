@model IEnumerable<Product>
<div class="text-center">
    <div class="display-6">Products</div>

    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-primary" asp-action="Create">
            <i class="fas fa-plus"></i> 
            Create
            </a>
    </div>


    <table class="table table-striped table-hover table-bordered table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product product in Model)
            {
                <tr>
                    <td>@product.ProductID</td>
                    <td>@product.ProductName</td>
                    <td>@product.Price.ToString("c")</td>
                    <td>
                        <div class=" btn-group">
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@product.ProductID">
                                <i class="fa fa-edit" aria-hidden="true"></i>Edit</a>
                            <a class="btn btn-link" asp-area="" target="_blank" asp-controller="Product"asp-action="get" asp-route-id="@product.ProductID">
                                <i class="fa fa-search" aria-hidden="true"></i>Show</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.ProductID">
                                <i class="fa fa-trash" aria-hidden="true"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
