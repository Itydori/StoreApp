@model ProductDtoForInsertion

<div class="text-center">
    <div class="display-6">Create</div>
</div>

<form method="post" asp-action="Create" enctype="multipart/form-data">

    <div class="text-danger" asp-validation-summary="All"></div>
   



    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories" >
    </select>

    </div>
     @* @foreach (Category cat in ViewBag.Categories)
        {
            <option value="@cat.CategoryID">@cat.CategoryName</option>
        }     *@

        @* <option value="1">InternalParts</option>
        <option value="2">ExternalParts</option>
        <option value="3">Connectivity</option> *@
    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input name="file" type="file" class="form-control" />
    </div>
    <div class="form-group my-3">
        <div class=" btn-group">
            <a class="btn btn-outline-secondary" asp-action="Index">
                <i class="fas fa-arrow-left"></i>
                Back
            </a>
            <button type="submit" class="btn btn-outline-primary">
                <i class="fas fa-save"></i>
                Save
            </button>
        </div>
    </div>
</form>