        {

                0%,
                100% {
                    border-color: #212121;
                }
            }

            @@keyframes text
            {
            0% {
                width: 0;
            }

            100% {
                width: 24.5ch;
            }
        }

        .btn-custom {
            background: rgba(0, 123, 255, 0.6);
            /* Semi-transparent blue */
            border: none;
            color: white;
            font-size: 1.2rem;
            padding: 10px 20px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            border-radius: 5px;
            backdrop-filter: blur(5px);
            /* Blur effect on button background */
        }

        .btn-custom:hover {
            background: rgba(0, 123, 255, 0.8);
        }

        .btn-custom i {
            margin-left: 10px;
        }
    </style>
</head>

<body>

    <!-- Background video -->
    <video class="video-background" autoplay muted loop>
        <source src="~/videos/sample1.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <!-- Form container -->
    <div class="contact-form-container">
        <h2 class="typewriter">Welcome to My StoreApp</h2>
        <a href="/Product/Index" class="btn btn-custom">
            Go to Product Page
            <i class="fa-regular fa-hand-pointer fa-xl"></i>
        </a>
    </div>
    <div class="contact-form-product">
    <div class="marquee">
        <span>
            @foreach (var Product in Model)
            {
                @Product.ProductName <text>&nbsp;&nbsp;|&nbsp;&nbsp;</text>
            }
        </span>
    </div>
</div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-pzjw8f+ua7Kw1TIq0p3dXfR2fWvkdZGflrOReC/qh0rPaAA7c3aThkzJZMGmDJzTt"
        crossorigin="anonymous"></script>
</body>

</html>
