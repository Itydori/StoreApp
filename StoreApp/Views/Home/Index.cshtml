@model IEnumerable<Product>
    @using Entities.Models
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEJX1+K6E1cv5vczR6p8R5vddedr9gh6bniKJz17B3n7zjSxVssZba7T3/ZB34" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body,
        html {
            margin: 0;
            padding: 0;
            height: 100%;
        }

        .video-background {
            position: fixed;
            /* Videoyu sabitler ve tam ekran yapar */
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -1;
            /* Video arka planda kalır */
        }

        .contact-form-container {
            width: 100%;
            max-width: 900px;
            padding: 30px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            /* Formu tam ortalar */
            background: transparent;
            backdrop-filter: blur(10px);
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            z-index: 1;
            /* Formun ön planda olması için */
            text-align: center;
            color: white;
        }


        .contact-form-product {
            width: 100%;
            max-width: 1200px;
            padding: 20px;
            position: absolute;
            top: 80%;
            left: 50%;
            transform: translate(-50%, -50%);
            /* Formu tam ortalar */
            background: transparent;
            backdrop-filter: blur(18px);
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 1);
            z-index: 1;
            /* Formun ön planda olması için */
            color: white;
            overflow: hidden;
        }
        .marquee {
            width: 100%;
            overflow: hidden;
            white-space: nowrap;
            /* Metnin tek satırda kalmasını sağlar */
            display: block;
        }
        .marquee span {
            width: 100%;
            display: inline-block;
            transform: translateX(100%);
            /* Yazının başlangıcı formun dışından gelir */
            animation: scroll-left 48s linear infinite;
            /* Metni soldan sağa doğru hareket ettirir */
        }
@@keyframes scroll-left {
    from {
        transform: translateX(100%);  /* Metin sağdan başlar */
    }
    to {
        transform: translateX(-100%);  /* Metin soldan çıkar */
    }
}

        .contact-form input,
        .contact-form textarea {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid #ddd;
            color: white;
        }

        .contact-form button {
            background-color: #007bff;
            border: none;
            color: white;
        }

        .typewriter {
